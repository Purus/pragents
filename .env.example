# Azure DevOps Configuration
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/yourorg
AZURE_DEVOPS_PROJECT=YourProject
AZURE_DEVOPS_PAT=your_personal_access_token_here

# SonarQube Configuration
SONAR_URL=https://sonarqube.example.com
SONAR_TOKEN=your_sonar_token_here
SONAR_PROJECT_KEY=your_project_key

# LLM Provider Configuration
# Choose one provider and configure accordingly
LLM_PROVIDER=openai  # Options: openai, anthropic, azure_openai, google

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (optional)
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Azure OpenAI (optional)
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# Google (optional)
# GOOGLE_API_KEY=your_google_api_key_here

# Workflow Configuration (optional, can also be set in config/default.yaml)
COVERAGE_THRESHOLD=90
WORKFLOW_MAX_RETRIES=3
WORKFLOW_TIMEOUT_SECONDS=3600

# API Configuration (optional)
API_HOST=0.0.0.0
API_PORT=8000

# UI Configuration (optional)
UI_FRAMEWORK=streamlit  # Options: streamlit, gradio
UI_PORT=8501
